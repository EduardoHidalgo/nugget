{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "ESNext",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "jsx": "react",
    "outDir": "./build",

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "./",

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist", "build"],
  "include": ["./src/**/*"]
}
